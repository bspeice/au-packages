<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>llvm</id>
    <title>LLVM</title>
    <version>5.0.0</version>
    <authors>LLVM team</authors>
    <owners>Bradlee Speice</owners>
    <summary>LLVM Compiler Infrastructure</summary>
    <description><![CDATA[The LLVM Project is a collection of modular and reusable compiler and toolchain technologies. 

This package installs all Windows tools, which includes but is not limited to:
- clang
- clangd
- clang++
- clang-format
- lld
- lldb
- llvm-objdump

MSVC tools will be installed if the MSVC toolchain is detected during installation.
]]></description>
    <dependencies>
      <dependency id="autohotkey" />
    </dependencies>
    <packageSourceUrl>https://github.com/bspeice/au-packages</packageSourceUrl>
    <projectUrl>http://llvm.org/</projectUrl>
    <docsUrl>http://releases.llvm.org/6.0.0/docs/index.html</docsUrl>
    <mailingListUrl>https://lists.llvm.org/mailman/listinfo/llvm-dev</mailingListUrl>
    <bugTrackerUrl>https://bugs.llvm.org/</bugTrackerUrl>
    <projectSourceUrl>https://git.llvm.org/git/llvm</projectSourceUrl>
    <tags>llvm c++ c lldb clang clangd lld</tags>
    <licenseUrl>http://llvm.org/docs/DeveloperPolicy.html#license</licenseUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <!-- TODO: update the icon, or copy it to my repository -->
    <iconUrl>http://llvm.org/img/DragonSmall.png</iconUrl>
  </metadata>
  <files>
    <file src="tools\**" target="tools" />
  </files>
</package>
